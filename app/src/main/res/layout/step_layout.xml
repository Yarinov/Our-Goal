<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="gravity"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/divider7"
                android:layout_width="1sp"
                android:layout_height="30sp"
                android:layout_marginLeft="29sp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/milestoneStatusIcon"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_marginLeft="15sp"
                android:background="@drawable/milestone_ic" />

            <View
                android:id="@+id/lowerDivider"
                android:layout_width="1sp"
                android:layout_height="30sp"
                android:layout_marginLeft="29sp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/milestoneTitleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15sp"
            app:cardCornerRadius="7sp"
            app:cardElevation="2sp"
            app:cardMaxElevation="2sp">

            <TextView
                android:id="@+id/milestoneTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:fontFamily="@font/lato"
                android:text="TextView"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>